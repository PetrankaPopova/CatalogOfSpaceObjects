<?xml version="1.0" encoding="UTF-8"?>
<faces-config xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd"
              version="2.2">
    <navigation-rule>
        <from-view-id>/galaxy.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>success</from-outcome>
            <to-view-id>/home.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/moon.xhtml</from-view-id>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/star.xhtml</from-view-id>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/planet.xhtml</from-view-id>
    </navigation-rule>
    <managed-bean>
        <managed-bean-name>galaxyBean</managed-bean-name>
        <managed-bean-class>com.space.jsf.beans.GalaxyBean</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
    </managed-bean>

</faces-config>